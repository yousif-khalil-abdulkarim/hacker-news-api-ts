{
    "name": "hacker-news-api-ts",
    "version": "1.0.0",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "files": [
        "./dist"
    ],
    "type": "module",
    "author": "Yousif Abdulkarim",
    "license": "MIT",
    "description": "Simplifies interacting with the offical Hacker News API",
    "keywords": [
        "Hacker news",
        "Hacker news REST API",
        "Hacker news client",
        "REST API",
        "Client",
        "Typescript"
    ],
    "scripts": {
        "check": "npx tsc --project \"./tsconfig.json\"",
        "lint": "npx eslint \"**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "npx eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
        "build": "npx rimraf dist && npx tsc --project \"./tsconfig.build.json\" && npx tsc-alias -p \"./tsconfig.build.json\"",
        "publint": "npm run build && npx publint",
        "check:all": "npm run check && npm run lint && npm run test && npm run publint",
        "build:with-checks": "npm run build && npm run check:all",
        "docs": "npx typedoc",
        "release": "npm run build && npx changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.28.1",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "@typescript-eslint/parser": "^8.26.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-no-relative-import-paths": "^1.6.1",
        "eslint-plugin-only-error": "^1.0.2",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-tsdoc": "^0.4.0",
        "eslint-plugin-typescript-enum": "^2.1.0",
        "publint": "^0.3.9",
        "rimraf": "^6.0.1",
        "tsc-alias": "^1.8.11",
        "typedoc": "^0.28.0",
        "typescript": "^5.8.2",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "dependencies": {
        "zod": "^3.24.2"
    }
}
